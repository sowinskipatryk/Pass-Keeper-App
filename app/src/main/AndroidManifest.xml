<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.keyper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Keyper">
        <activity
            android:name=".PassEditorActivity"
            android:parentActivityName=".MainMenuActivity"
            android:exported="false" />
        <activity
            android:name=".MasterKeyEditorActivity"
            android:parentActivityName=".MainMenuActivity"
            android:exported="false" />
        <activity
            android:name=".PassCreatorActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity" />
        <activity
            android:name=".LoginScreenActivity"
            android:exported="false" />
        <activity
            android:name=".PassViewerActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity" />
        <activity
            android:name=".MainMenuActivity"
            android:exported="false" />
        <activity
            android:name=".PassGeneratorActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>