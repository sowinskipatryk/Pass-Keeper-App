<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/service_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:longClickable="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/serviceNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:padding="5dp"
            android:text="Service name:"
            android:textColor="@color/ic_launcher_background"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/serviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ems="6"
            android:fontFamily="@font/baloo"
            android:padding="5dp"
            android:text="example"
            android:textColor="@color/ic_launcher_background"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/serviceNameText"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/serviceNameText">

            <TextView
                android:id="@+id/servicePasswordText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/baloo"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Password:"
                android:textColor="@color/ic_launcher_background"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="2.9"
                android:paddingRight="5dp"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                app:layout_constraintEnd_toStartOf="@+id/servicePasswordCopyDrawable"
                app:layout_constraintStart_toEndOf="@+id/servicePasswordText"
                app:layout_constraintTop_toTopOf="@+id/servicePasswordCopyDrawable"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#555555">

                <EditText
                    android:id="@+id/servicePassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="@font/baloo"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:text="example"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/servicePasswordText"
                    app:layout_constraintTop_toBottomOf="@+id/serviceNameText" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/servicePasswordCopyDrawable"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:drawableStart="@drawable/ic_baseline_content_copy_24"
                android:drawableTint="#555555"
                android:fontFamily="@font/baloo"
                android:paddingRight="5dp"
                android:textColor="@color/ic_launcher_background"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/serviceName" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>